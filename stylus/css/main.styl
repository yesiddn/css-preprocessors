// VARIABLES

// COLORS
primary-color = #333333
secondary-color = #8841DA
light-color = #FFFFFF

// FONTS
font-one = 'Lato', sans-serif
font-two = 'Oswald', sans-serif

// MIXINS
contenedor()
  display flex
  width 90%
  margin 0 auto
  padding 30px 0
  justify-content space-evenly

shadow()
  background-color light-color
  box-shadow 0 20px 33px 0 rgba(0,0,0,0.2)

* 
  box-sizing border-box

body
  margin 0
  font-family font-one
  color primary-color

.buscador
  width 100%
  height 250px
  padding 100px
  background-image url('../images/cover.jpg')
  background-size cover
  text-align center

  form
    margin 0px

  // ANIDACIÃ“N 
  &__input
    width 75%
    height 50px
    padding 20px
    border none
    border-radius 30px
    font-size 25px
  &__input:focus
    outline none

.encabezado--con-filtros
  contenedor()

  h2
    margin-top 10px
    font-family font-two
    font-size 50px
    font-weight 500
    text-transform uppercase

  .filtros
    width 250px
    height 75px
    padding 20px
    margin-left auto
    shadow()

    span
      font-family font-two
      text-transform uppercase

    a
      margin-left 20px
      font-size 25px
      color primary-color

.contenido
  contenedor()
  margin-bottom 40px

.caja 
  max-width 400px
  margin 0 10px
  border-radius 10px
  shadow()
  
  &__contenido
    padding 20px
    background-color light-color

    span
      text-transform uppercase
      color secondary-color
      font-family font-two

    h3
      text-transform uppercase
      font-family font-two
      font-weight normal