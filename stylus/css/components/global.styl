// VARIABLES

// COLORS
primary-color = #333333
secondary-color = #8841DA
light-color = #FFFFFF

// FONTS
font-one = 'Lato', sans-serif
font-two = 'Oswald', sans-serif

// MIXINS
contenedor()
  display flex
  width 90%
  margin 0 auto
  padding 30px 0
  justify-content space-evenly

box()
  display flex
  max-width 400px
  margin 0 10px
  justify-content space-between
  flex-direction column
  border-radius 10px
  background-color light-color
  shadow()

shadow()
  background-color light-color
  box-shadow 0 20px 33px 0 rgba(0,0,0,0.2)

// FUNCTIONS
opacity(color, opacity)
  alpha(color, opacity)

// CONDITIONALS
titles(font)
  if font == font-one
    font-family font-one
  else if font == font-two
    font-family font-two
    font-weight 600
    text-transform uppercase

// LOOPS
for header in 3 2 1
  h{header}
    font-size 35px - (5 * header)
    margin 0

* 
  box-sizing border-box

body
  margin 0
  titles(font-one)
  color primary-color
